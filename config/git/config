[color]
  ui = true
[color "status"]
  added = green
  changed = yellow
  untracked = red
  branch = blue
  header = white
[color "branch"]
  current = magenta bold
  local = white
  remote = yellow
[color "diff"]
  meta = dim cyan
  frag = magenta bold
  old = red
  new = green
  commit = dim cyan
  whitespace = white reverse
[user]
  name = hachy
  email = 1613863+hachy@users.noreply.github.com
[init]
  defaultBranch = main
[include]
  path = ~/.gitconfig_local
[core]
  editor = nvim
  autocrlf = input
  pager = delta
[interactive]
    diffFilter = delta --color-only
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager
[alias]
  co = checkout
  s = status
  cm = commit -m
  b = branch
  br = branch -av
  d = diff
  ds = ! git diff | delta --side-by-side
  dc = diff --cached
  dcs = ! git diff --cached | delta --side-by-side
  l = ! git log --pretty='%C(auto)%h %C(auto)%d %Creset%s %C(green dim)%aN %C(magenta dim)%cd' --graph --date=relative --all -n $(( $(tput lines) - 4 ))
  ls = log --stat
  lp = log --oneline -p
  ignore = update-index --assume-unchanged
  unignore = update-index --no-assume-unchanged
  ignored = !git ls-files -v | grep "^[a-z]"
  wt = worktree
  wtl = worktree list
[push]
  default = simple
[merge]
  ff = false
  conflictStyle = zdiff3
[diff]
  compactionHeuristic = true
[delta]
  commit-style = blue
  commit-decoration-style = ol bold blue
  file-style = bold magenta
  file-decoration-style = bold box magenta
  hunk-header-style = "omit"
  minus-style = red
  minus-emph-style = black red
  minus-empty-line-marker-style = black red
  zero-style = white
  plus-style = green
  plus-emph-style = black green
  plus-empty-line-marker-style = black green
[credential "https://dev.azure.com"]
	useHttpPath = true
